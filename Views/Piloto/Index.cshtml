@model IEnumerable<Race_Track.Models.Piloto>

@{
    ViewData["Title"] = "Index";
}

<h1>Pilotos</h1>

<p>
    <a asp-action="Create" class="btn btn-success">+ Vehiculo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PilotoNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PilotoApellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PilotoDni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PilotoNumeroLicencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PilotoExpedicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PilotoPropietario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehiculo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PilotoNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PilotoApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PilotoDni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PilotoNumeroLicencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PilotoExpedicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PilotoPropietario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehiculo.VehiculoTipo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VehiculoId"class="btn btn-warning">Modificar</a> 
                <a asp-action="Details" asp-route-id="@item.VehiculoId" class="btn btn-primary">Detalle</a> 
                <a asp-action="Delete" asp-route-id="@item.VehiculoId"  class="btn btn-danger" onclick="return confirm('Â¿Esta seguro que quiere eliminar este instructor?')">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
